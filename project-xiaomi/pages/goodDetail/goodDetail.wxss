/* pages/goodDetail/goodDetail.wxss */
#good-detail {
  min-height: 100vh;
  background-color: #eee;
}

.color--999 {
  color: #999;
}

.good-info-box {
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.good-title-cell {
  display: flex;
  justify-content: space-between;
  padding-bottom: 15rpx;
}

.good-title {
  font-size: 40rpx;
  font-weight: 500;
}

.good-share {
  max-width: 60rpx;
  height: 40rpx;
  padding: 0;
  position: relative;
  left: 120rpx;
  font-size: 25rpx;
  color: #999;
  background-color: #fff;
}

.good-desc {
  font-size: 30rpx;
  color: #999;
  line-height: 45rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  padding-bottom: 15rpx;
}

.good-price {
  font-size: 35rpx;
  font-weight: 500;
  color: #ff6700;
}

.new-person-cell {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}

.new-img {
  font-size: 25rpx;
  color: #999;
}

.new-text span {
  color: #ff6700;
}

.adress-box {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.cell--flex {
  display: flex;
}

.cell--flex .title {
  padding-left: 60rpx;
}

.adress-box .cell {
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}

.adress-cell, .select--cell {
  border-bottom: 1rpx solid #eee;
}

.more-info {
  font-size: 28rpx;
}

.recommend-box {
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.recommend-box .title {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  font-size: 35rpx;
  font-weight: 500;
  color: #ff6700;
}

.recommend-box .content-item {
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  width: 250rpx;
  border: 1rpx solid #ff6700;
}

.content-title {
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.content-price {
  font-size: 28rpx;
  color: #ff6700;
}

.scroll-view_H{
  white-space: nowrap;
}

.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}


.picker-box {
  height: 0;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 100;
  transition: all 0.3s ease;
}

.picker-box .title {
  display: flex;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 90rpx;
  border-bottom: 1rpx solid #eee;
}

.content-box .cell {
  padding: 30rpx 40rpx;
}

.content-box .desc {
  padding: 0 30rpx;
  font-size: 25rpx;
  color: #999;
}

.picker-box .scroll-view-y {
  height: 900rpx;
}

.picker-box .btn {
  width: 100%;
  color: #fff;
  background-color: #FF6F33;
  position: absolute;
  bottom: 0;
  left: 0;
}


.bg {
  width: 100%;
  min-height: 100vh;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.7);
}








