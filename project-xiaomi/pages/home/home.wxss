/* pages/home/home.wxss */
.body {
  min-height: 100vh;
  background-color: #eee;
}

.list-wrapper {
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #fff;
}

.item-wrapper {
  width: 120rpx;
  padding-top: 30rpx;
  text-align: center;
}

.item-wrapper .icon-img {
  width: 55rpx;
  height: 55rpx;
}

.item-wrapper:last-child::after {
  content: 'ç±³10';
  background-color: rgb(247, 89, 89);
  border-radius: 30%;
  border-bottom-left-radius: 1rpx;
  font-size: 18rpx;
  color: #fff;
  padding: 3rpx;
  position: relative;
  bottom: 110rpx;
  left: 28rpx;
}

.item-wrapper .icon-text {
  font-size: 23rpx;
  color: #999;
}


.big-card {
  width: 95%;
  margin: 15rpx auto 0;
  background-color: #fff;
}

.big-card .title {
  padding: 15rpx 0 15rpx 15rpx;
  font-size: 35rpx;
  font-weight: 700;
  color: #333;
}

.big-card .image {
  width: 100%;
}

.big-card .image-info {
  padding: 15rpx;
  line-height: 38rpx;
}

.big-card .image-info .image-title {
  font-size: 30rpx;
  color: #333;
}

.big-card .image-info .image-desc {
  font-size: 25rpx;
  color: #999;
}

.big-card .image-info .image-price {
  font-size: 30rpx;
  color: #ff6700;
}

.middle-title {
  width: 95%;
  margin: 20rpx auto;
  font-size: 35rpx;
  color: #333;
  font-weight: 700;
}

.small-box-list {
  width: 95%;
  margin: 0 auto 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.small-box-list .small-box-item {
  width: 49.5%;
  margin-bottom: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 45rpx;
  background-color: #fff;
}

.small-box-list .small-box-item .image-pic {
  width: 100%;
  height: 370rpx;
}

.small-box-list .small-box-item .image-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.small-box-list .small-box-item .image-desc {
  font-size: 25rpx;
  color: #999;
}

.small-box-list .small-box-item .image-price {
  display: flex;
  justify-content: flex-start;
}

.small-box-list .small-box-item .image-price .now-price {
  font-size: 30rpx;
  color: #ff6700;
}

.small-box-list .small-box-item .image-price .past-price {
  padding-left: 10rpx;
  font-size: 25rpx;
  color: #999;
  text-decoration: line-through;
}


.bottom-box {
  width: 95%;
  margin: 20rpx auto 0;
  background-color: #fff;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 15rpx;
}

.title-wrapper .title {
  font-size: 35rpx;
  font-weight: 700;
  color: #333;
}

.title-wrapper .more {
  font-size: 30rpx;
  color: #999;
}

.bottom-box .image-img {
  width: 100% !important;
}

.bottom-box .image-bottom {
  padding: 0 15rpx;
  line-height: 55rpx;
}

.bottom-box .image-bottom .image-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.bottom-box .image-bottom .image-info {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 25rpx;
}

.bottom-box .image-bottom .image-info .bottom-right {
  display: flex;
}

.bottom-box .image-bottom .image-info .bottom-right .one {
  margin-right: 15rpx;
}

.bottom-text {
  line-height: 80rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}






